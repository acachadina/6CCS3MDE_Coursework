/* XPECT_SETUP uk.ac.kcl.inf.languages.dot.xpect.XPectTests END_SETUP*/

//// Test color in graphs - showing a path in a graph 
graph coloured {
 	a -- b[color=red];
    b -- c;
    c -- d[color=red];
    d -- e;
    e -- f;
    a -- d;
    b -- d[color=red];
    c -- f[color=red];
} 

//Test shorthand version for coloured graphs
graph s_coloured {
    a -- b -- d -- c -- f[color=red];
    b -- c;
    d -- e;
    e -- f;
    a -- d;
}